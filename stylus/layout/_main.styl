.main
    padding 10rem 0 0 0
    height 60rem
    background-image url('../../images/bg-pattern-intro.svg'), linear-gradient(to right, color-gradient-nav-light, color-gradient-nav)
    background-position center
    background-repeat no-repeat
    background-size 250%
    border-radius 0 0 0 100px
    &__title
        margin 10rem auto 0
        width 31rem
        font-size 3.5rem
        color color-neutral-text
        text-align center
        line-height 1.3
    &__description
        margin 1rem auto 0
        width 28rem
        color color-neutral-text
        text-align center
        line-height 1.3
        letter-spacing 1px
    &__cta-buttons
        display flex
        justify-content: center
        margin-top 5rem
    &__start-for-free
        margin-right .5rem
        transition all 250ms ease-in-out
        &:hover
            color color-neutral-text
            background-color color-primary-cta-hover-background
            border 1px solid color-primary-cta-hover-background
    &__learn-more
        margin-left .5rem
        transition all 250ms ease-in-out
        &:hover
            color color-primary-cta-hover-background
            background-color color-neutral-text
            border 1px solid color-neutral-text

@media screen and (min-width: 67.5rem)
    .main
        &__title
            width max-content
            font-size 5rem
        &__description
            width max-content