.nav
    &__menu
        position absolute
        top 12rem
        left calc(50% \- 42.5%)
        padding 0 3rem 1rem
        height auto
        width 85%
        max-width 45rem
        border-radius 10px
        background-color white
        box-shadow 0px 10px 40px 15px rgba(0, 0, 0, 0.1)
        opacity 0
        visibility hidden
        transition all 300ms ease-in-out
    &__list
        margin 0
        text-align center
        list-style none
    &__menu-element
        margin 2rem 0
    &__menu-element-text
        color color-primary-headings
        font-size 2rem
        font-weight bold
        text-decoration none
    &__menu-element-icon
        margin 0
        vertical-align middle
    &__submenu
        display none
        margin 2rem 0
        padding 0.1px
        background-color #EEEEEE
        border-radius 10px
        opacity 0
        visibility hidden
        transition all 250ms ease-in-out 100ms
    &__submenu-elements
        display block
        margin 2.5rem 0
        color rgba(color-primary-headings, 0.7)
        font-weight bold
        text-decoration none
    &__divider
        width 100%
        height 1px
        background-color #EEEEEE
    &__login
        color color-primary-headings
        font-size 2rem
        font-weight bold
        text-decoration none
    &__signup
        min-width 12rem
        color #FFFFFF
        font-size 1.8rem

@media screen and (min-width: 33.125rem) 
    .nav
        &__menu
            left calc(50% - 22.5rem)

@media screen and (min-width: 52.125rem)
    .nav
        &__left
            display flex
            align-items center
            margin-left 5rem
        &__menu
            position static
            display inline-block
            margin-top 5rem
            padding 0
            height auto
            width 100%
            max-width none
            background none
            border-radius none
            box-shadow none
            vertical-align top
            opacity 1
            visibility visible
        &__menu-element
            position relative
            display inline-block
            margin 0
        &__menu-element:not(:first-of-type)
            margin-left 2rem
        &__menu-element-text
            font-size 1.6rem
            color white
            &:hover
                text-decoration underline
        &__menu-element-text:hover + &__submenu
            display block
            opacity 1
            visibility visible
            transition all 250ms ease-in-out
        &__submenu
            position absolute
            top 2rem
            display block
            padding 1rem 2rem
            background-color white
            &:hover
                opacity 1
                visibility visible
        &__submenu-elements
            margin 1rem 0
            color black
            font-weight normal
            &:hover
                font-weight bold
        &__divider
            display none
        &__right
            display flex
            align-items center
        &__login
            font-size 1.6rem
            color white
            &:hover
                text-decoration underline
        &__signup
            min-width none
            transition all 250ms ease-in-out
            &:hover
                background-color color-primary-cta-hover-background
                color white